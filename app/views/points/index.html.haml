= gmaps4rails(@json)

#popup-form{:style => "display:block; z-index:999; position:absolute;"}
  .popup
    = form_for @point do |f|
      %header
        %h4.address
      %section
        = f.hidden_field :latitude
        = f.hidden_field :longitude
        = f.hidden_field :address

        .control-group
          = f.label :tags
          .controls
            = collection_select :point, :tags, Tag.all, :id, :name, {}, :multiple => true, :class => 'chzn-select'
        .control-group
          = f.label :description
          .controls
            = f.text_field :description
      %button{:class => 'btn btn-primary', :onclick => 'validate_form()'}
        Create Point