#popup-form{:style => "display:none"}
  %div{:class => "popup ui-widget"}
    = form_for @point do |f|
      %header
        .coordinates  
          %div.latitude
          %div.longitude
        .address
          %h5.address
      %section
        = f.hidden_field :latitude
        = f.hidden_field :longitude
        = f.hidden_field :address
         
        .control-group
          .controls
            -#= collection_select :point, :tags, Tag.all, :id, :name, {}, :multiple => true, :class => 'chzn-select'
            -#= f.text_field :tags, :class => 'tag'
            .pholder
              #def_text
                Add tags  
            %input{:type => "text", :name => 'point[tag][]', :value => "", :class => "tag"}
            -#%input{:type => "text", :name => 'point[tag][1-a]', :value => "Hazel Grouse", :class => "tag"}
            -#%input{:type => "text", :name => 'point[tag][2-a]', :value => "Test", :class => "tag"}
        .control-group
          = f.label :comments
          .controls
            = f.text_area :description ,:rows => 4, :cols => 50, :style => "width: 398px; height: 95px;resize: none;"
      .pos      
        %button{:class => 'btn btn-primary', :onclick => 'validate_form()' }
          Create Point


