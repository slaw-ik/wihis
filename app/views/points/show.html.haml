- model_class = Point
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:latitude) + ':'
  %br
  = @point.latitude
%p
  %strong= model_class.human_attribute_name(:longitude) + ':'
  %br
  = @point.longitude
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @point.description
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @point.address
%p
  %strong= model_class.human_attribute_name(:gmaps) + ':'
  %br
  = @point.gmaps

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), points_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_point_path(@point), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), point_path(@point), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
